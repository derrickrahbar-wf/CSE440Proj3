bison -d -y -v  pascal.y
echo "#include \"shared.h\"" >> y.tab.h.tmp
cat y.tab.h >> y.tab.h.tmp
rm y.tab.h
mv y.tab.h.tmp y.tab.h
flex pascal.l
gcc symtab.c usrdef.c rulefuncs.c error.c shared.c y.tab.c lex.yy.c  -g -Wall -c 
g++ -std=c++0x symtab.o usrdef.o rulefuncs.o error.o shared.o y.tab.o lex.yy.o  utils.cpp code_gen.cpp control_flow.cpp main.cpp  -o server
